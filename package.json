{
  "name": "graduation-project-document-generator",
  "version": "0.0.1",
  "description": "A project that builds a document site with the given data",
  "scripts": {
    "start": "http-server './dist/' -c-1 -p 8080",
    "clean": "rimraf ./dist/ && mkdirp ./dist/",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:*",
    "build:html": "node tasks/build-html.js",
    "build:css": "node tasks/build-css.js",
    "build:js": "rollup --config rollup.config.js",
    "build:assets": "node tasks/move-assets.js",
    "prewatch": "npm run build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:html": "chokidar 'src/**/*.{html,md}' --command 'npm run build:html'",
    "watch:css": "chokidar 'src/**/*.css' --command 'npm run build:css'",
    "watch:js": "rollup --config rollup.config.js --watch",
    "watch:assets": "chokidar 'src/assets/**/*.*' --command 'npm run build:assets'"
  },
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "baguettebox.js": "1.8.2",
    "chokidar-cli": "1.2.0",
    "cssnano": "3.10.0",
    "glob": "7.1.1",
    "glob-promise": "3.1.0",
    "http-server": "0.9.0",
    "marked": "0.3.6",
    "mkdirp": "0.5.1",
    "npm-run-all": "4.0.2",
    "nunjucks": "3.0.0",
    "nunjucks-markdown": "2.0.1",
    "postcss": "5.2.16",
    "postcss-calc": "5.3.1",
    "postcss-color-function": "3.0.0",
    "postcss-color-rgba-fallback": "2.2.0",
    "postcss-custom-properties": "5.0.2",
    "postcss-import": "9.1.0",
    "postcss-reporter": "3.0.0",
    "rimraf": "2.6.1",
    "rollup": "0.41.5",
    "rollup-plugin-buble": "0.15.0",
    "rollup-plugin-commonjs": "8.0.2",
    "rollup-plugin-node-resolve": "2.0.0",
    "rollup-plugin-uglify": "1.0.1",
    "rollup-watch": "3.2.2",
    "stylelint": "7.9.0"
  },
  "dependencies": {}
}
